    <section class="appoitnment-hero" >
        <div class="main-container1">
            <div class="heading" > 
            <h3 class="appoint-h3" >Book an Appointment </h3>
            </div>
            <div class="container1" >
            <form method="POST">
            <label class="labels">Select Appointment Date*</label>
            <input class="inputE" type="date" placeholder="dd/mm/yy" required>

            <label class="labels" >Time Interval*</label>
            <div class="radio" >
            <input type="radio" name="time" >
            <label>Morning</label>
            </div>
            <div class="radio" >
                <input type="radio" name="time" >
                <label>AfterNoon </label>
            </div>
            <div class="interval radio"  >
                <input type="radio" name="time" >
                <label>Evening</label>
            </div>

            <label class="labels">Appointment Status/Urgency*</label>
            <div class="radio" >
                <input type="radio" name="status" >
                <label>Routine Check-up</label>
            </div>
            <div class="radio" >
                <input type="radio" name="status" >
                <label>Non Urgent Check-up</label>
            </div>
            <div class="radio" >
                <input type="radio" name="status" >
                <label>Urgent Check-up</label>
            </div>
            <div class="radio interval" >
                <input type="radio" name="status" >
                <label>Surgical Appointment</label>
            </div>

            <label class="labels" >Upload Health Records</label>
            <div class="upload-data" >
                <button>choose file</button>
                <label class="no-file-chosen">No file chosen</label>
            </div>
            <label class="labels">Appointment Details</label>
            <textarea name="" id="textarea" cols="10" rows="10" required></textarea>

            <button class="appoint-btn" >BOOK APPOINTMENT</button>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            </form>
            </div>
            
        </div>
        <p class="last-p" >All rights Reserved Tvastra 2081</p>
        </section>
    

