            <i  onclick="showUl()" class="fa fa-bars"  id = "sign"></i>
        </div>
        </div>
        <div class="ul-list" >
            <ul class="contents" >
                <li class="content-li" ><a href="/doctor">Doctor</a></li>
                <li class="content-li" ><a href="/hospital">Hospital</a></li>
                <li class="dropdown treatment-li" >
                    <a href="/treatment">Treatment</a>
                    <ul class="dropdown-content" >
                        <li><a href="/">Cancer</a></li>
                        <li><a href="/">Dentistry</a></li>
                        <li><a href="/">CardioPedics Surgery</a></li>
                        <li><a href="/">Cardiology Treatment</a></li>
                        <li><a href="/">Infertility Specialist</a></li>
                        <li><a href="/">Cancer</a></li>
                    </ul>
                </li>
                <li class="about-li content-li" ><a href="/about">About</a></li>
                <li class="logout-li content-li" ><a href="/logout">logout</a></li>

            </ul>
        </div>
        <div class="top-btns" >  
            <% if(currentUser){  %>
                <button id="tvastra-plus-btn" onclick="location.href = '/tvastra-plus';" >Tvastra Plus</button>
            <% } %>
                <button id="btn2" onclick="location.href = '/';" >Get a Qoute</button>
        </div>
        <% if(currentUser){ %>
            <div class="head-nav-user" >
                <div class="nav-user" >
                    <label ><%= currentUser.name.toUpperCase() %></label>
                    <i class="fa fa-angle-down nav-profile-icon" onclick="showProfile()" aria-hidden="true"></i>
                </div>

                <ul class="nav-user-profile">
                    <li class="user-profile-li" >
                        <div class="nav-user-image" >
