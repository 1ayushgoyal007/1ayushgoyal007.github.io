    <link rel="stylesheet" href="/css/root.css">
    <link rel="stylesheet" href="/css/login_signup.css">
</head>
<body>

    <nav class="nav-bar" >
        <div class="image-ico" >
        <div class="imageii" >
            <a href="index" ><img class= "image-01" src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/footer.png"></a>
        </div>
        <div class="bar-icon" >
            <i  onclick="showUl()" class="fa fa-bars"  id = "sign"></i>
        </div>
        </div>
        <div class="ul-list" >
            <ul class="contents" >
                <li><a href="/doctor">Doctor</a></li>
                <li><a href="/hospital">Hospital</a></li>
                <li class="dropdown" >
                    <a href="/treatment">Treatment</a>
                    <ul class="dropdown-content" >
                        <li><a href="/">Cancer</a></li>
                        <li><a href="/">Dentistry</a></li>
                        <li><a href="/">CardioPedics Surgery</a></li>
                        <li><a href="/">Cardiology Treatment</a></li>
                        <li><a href="/">Infertility Specialist</a></li>
                        <li><a href="/">Cancer</a></li>
                    </ul>
                </li>
                <li><a href="/about">About</a></li>
            </ul>
        </div>
        <div class="top-btns" >  
            <button id = "btn2" >Get a Qoute</button>
        </div>
    </nav>

    <% if(error && error.length>0){ %>
        <div class="error" >
            <div class="red-icon" >
                <i class="fa fa-times-circle-o fa-2x error-icon" aria-hidden="true"></i>
            </div>
            <div class="red" >
                <h4>Failure</h4>
                <p><%= error %></p>
            </div>
            <div>
                <i class="fa fa-times fa-2x error-icon" onclick="hideErrorFlash()" aria-hidden="true"></i>
            </div>
        </div>
        <% } %>
    
    <section class="signup-hero" >
        <div class="main-container2">
            <div class="heading" > 
            <h3 class="login-h3" >SignUp</h3>
            </div>
            <div class="container1" >




            <form action="/sign-up" method="POST">

            <input class="inputE" type="text"     name="name"        placeholder="Enter Name" required  >
            <input class="inputE" type="email"    name="username"    placeholder="Enter Email"    required>
            <input class="inputE" type="password" name="password"    placeholder="Enter Password" 
            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
            pattern= "(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            required>
            <select class=" inputE inputDropdown" >
                <option class="gender-select" value="Gender">Select Gender</option>
                <option class="gender-select" value="Gender">Male</option>
                <option class="gender-select" value="Gender">Female</option>
            </select>
            <input class="inputE inputDropdown" type="date" placeholder="dd/mm/yyyy" required>
            <input class="inputE" type="text" name="contactNo" placeholder="Enter Phone Number" required>
            <div class="state-city" >
            <input class="inputE stats"  id ="city" type="text" placeholder="Enter City" required>
            <input class="inputE stats" id = "state" type="text" placeholder="Enter State" required>
            </div>
            <select class="inputE inputDropdown">
                <option value="Gender">Select Your Country</option>
                <option value="Gender">India</option>
                <option value="Gender">America</option>
            </select>
            <button class="input-btn" >SignUp</button>
            <i class="fa fa-long-arrow-right right-arrow " aria-hidden="true"></i>
            </form>



            <span class="login-span" >Not Registered?<a href="login" >Login</a></span>
            </div>
            <div>
                <h4 class="login-h4" >or Join with</h4>
                <div class="social-media" >
                    <a href="https://www.facebook.com" ><img class="media-icon" src="https://hrcdn.net/fcore/assets/facebook-colored-af4249157d.svg" alt="Facebook"></a>
                    <a href="https://www.google.co.in/?gfe_rd=cr&dcr=0&ei=SS9nWu3GLJGdX7_ZldgI" ><img class="media-icon" src="https://hrcdn.net/fcore/assets/google-colored-20b8216731.svg" alt="Google"></a>
                    <a href="https://www.linkedin.com/feed/" ><img class="media-icon" src="https://hrcdn.net/fcore/assets/linkedin-colored-1db195795c.svg" alt="LinkeDn"></a>
                    <a href="https://github.com/" ><img class="media-icon" src="https://hrcdn.net/fcore/assets/github-colored-1db995054b.svg" alt="git"></a>
                </div>
            </div>
        </div>
        <p class="last-p" >All rights Reserved Tvastra 2020</p>
    </section>
    

    <script src="/scripts/script.js"></script>
    <script src="/scripts/flash.js" > </script>

    
</body>
</html>