                        <li><a href="/">Cancer</a></li>
                        <li><a href="/">Dentistry</a></li>
                        <li><a href="/">CardioPedics Surgery</a></li>
                        <li><a href="/">Cardiology Treatment</a></li>
                        <li><a href="/">Infertility Specialist</a></li>
                        <li><a href="/">Cancer</a></li>
                    </ul>
                </li>
                <li><a href="/about">About</a></li>
            </ul>
        </div>
        <div class="top-btns" >  

            <button onclick="location.href = '/tvastra-plus';" id = "btn2" >Get a Qoute</button>

        </div>
    </nav>

    
    <section class="Login-hero" >
    <div class="main-container1">
        <div class="heading" > 
        <h3 class="login-h3" >Login</h3>
        </div>
        <div class="container1" >


        <form action="/login" method="post">
        <div>
            <input class="inputE" type="email" name="username" placeholder="Enter E-mail" required>
        </div>
        <div class="contain-password" >
            <input class="inputE passwordField" type="password" name="password"  placeholder="Enter password"  
            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
            pattern= "(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required >
            <i class="fa fa-eye"       aria-hidden="true" onclick="hidePassword()" ></i>
            <i class="fa fa-eye-slash" aria-hidden="true" onclick="showPassword()"  ></i>  
        </div>
        <div class="contain-otp-password" >
            <a href="#">Login with OTP</a>
            <a href="#">Forgot Password</a>
        </div>
        <button class="input-btn" >LOGIN</button>
        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        </form>




        <span class="login-span" >Not Registered?<a href="sign-up" >Signup</a></span>
        </div>
        <div>
            <h4 class="login-h4" >or Connect with</h4>
