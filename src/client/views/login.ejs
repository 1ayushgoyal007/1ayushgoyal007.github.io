<body>

    <% if(error && error.length>0){ %>
        <div class="error" >
            <div class="red-icon" >
                <i class="fa fa-times-circle-o fa-2x error-icon" aria-hidden="true"></i>
            </div>
            <div class="red" >
                <h4>Failure</h4>
                <p><%= error %></p>
            </div>
            <div>
                <i class="fa fa-times fa-2x error-icon" onclick="hideErrorFlash()" aria-hidden="true"></i>
            </div>
        </div>
        <% } %>

        <% if(success && success.length>0){ %>
            <div class="success" >
                <div class="green-icon" >
                    <i class="fa fa-check fa-lg green-icon" aria-hidden="true"></i>
                </div>
                <div class="green">
                    <h4>Success</h4>
                    <p><%= success %></p>
                </div>
                <div>
                    <i class="fa fa-times fa-lg error-icon" onclick="hidesuccessflash()" aria-hidden="true"></i>
                </div>
            </div>
        <% } %>
    
        
    <nav class="nav-bar" >
        <div class="image-ico" >
        <div class="imageii" >
            <a href="index" ><img class= "image-01" src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/footer.png"></a>
        </div>
        <div class="bar-icon" >
            <i  onclick="showUl()" class="fa fa-bars"  id = "sign"></i>
        </div>
        </div>
        <div class="ul-list" >
            <ul class="contents" >
                <li><a href="/doctor">Doctor</a></li>
                <li><a href="/hospital">Hospital</a></li>
